<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s12 center">
        {{#each headlines}}
        <div class="card col m4 s12">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src={{image}}>
            <span class="activator grey-text text-darken-4"><i class="material-icons right">expand</i></span>
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">{{title}}</span>
            <p><a href={{url}} target="_blank">View article</a></p>
          </div>
          <div class="card-reveal">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src={{image}}>
            </div>
            <span class="card-title grey-text text-darken-4">{{title}}<i class="material-icons right">close</i></span>
            <p>{{body}}</p>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

